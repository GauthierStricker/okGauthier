<script>
$(".speaking").hide()
var question = 0;
var playing = false;

function actualizeCurrentQuestion() {
  switch (question) {
  case 0:
    $('.current-question').text('OK Gauthier, qui es-tu ?');
    break;
  case 1:
    $('.current-question').text('OK Gauthier, comment fais-tu pour me parler ?');
    break;
  case 2:
    $('.current-question').text('OK Gauthier, pourquoi me contacter ?');
    break;
  case 3:
    $('.current-question').text('OK Gauthier, pourquoi postuler chez Google ?');
    break;
  case 4:
    $('.current-question').text('OK Gauthier, pourquoi postuler à ce poste en particulier ?');
    break;
  case 5:
    $('.current-question').text("OK Gauthier, que penses-tu de l'avenir du conversationnel ?");
    break;
  case 6:
    $('.current-question').text("OK Gauthier, qu'attends-tu le plus comme fonctionnalité dans Google Home ?");
    break;
  case 7:
    $('.current-question').text('OK Gauthier, serais-tu intéressé pour un autre poste chez Google si le poste ne convient pas ?');
    break;
  default:
}
};

$(".previous").on("click", function() {
  if (playing == false) {
    if (question > 0) {
      question -= 1;
      $(".next").removeClass("disabled")
    };
    if(question == 0){
      $(".previous").toggleClass("disabled");
    };
  actualizeCurrentQuestion()
  };
});

$(".next").on("click", function() {
  if (playing == false) {
    if (question < 7) {
      question += 1
      $(".previous").removeClass("disabled")
    };
    if(question == 7){
      $(".next").toggleClass("disabled");
    };
    actualizeCurrentQuestion()
  }
});

$(".audioButton").on("click", function() {
  $(".audio-play")[question].currentTime = 0;
  return $(".audio-play")[question].play();
});

$('.audio-play').on('playing', function() {
   playing = true;
   console.log("playing = true")
   $(".audioButton").hide()
   $(".speaking").show()
   $(".previous").toggleClass("disabled")
   $(".next").toggleClass("disabled")
});
$('.audio-play').on('ended', function() {
   playing = false;
   console.log("playing = false")
   $(".audioButton").show()
   $(".speaking").hide()
   $(".previous").removeClass("disabled")
   $(".next").removeClass("disabled")
});
$('.speaking').on("click", function() {
   playing = false;
   console.log("playing = false")
   $(".audio-play")[question].pause()
   $(".audio-play")[question].currentTime = 0;
   $(".audioButton").show()
   $(".speaking").hide()
   $(".previous").removeClass("disabled")
   $(".next").removeClass("disabled")
});
</script>
